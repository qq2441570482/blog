<div class="main">
    <div class="controller">
      <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <div class="panel">
                <div class="panel-body">
                  <%= form_tag sessions_path, class: 'form-horizontal' %>
                  <div class="form-group">
                    <%= label_tag '用户名', nil, class: 'col-md-4 control-label' %>
                    <div class="col-md-6">
                      <%= text_field_tag :username, nil, placeholder: '用户名', class: 'form-control'%>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag '密码',nil, class: 'col-md-4 control-label' %>
                    <div class="col-md-6">
                      <%= password_field_tag :password, nil, placeholder: '密码', class: 'form-control'  %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                      <%= submit_tag '登录', class: 'btn btn-danger' %>
                    </div>
                  </div>
                </div>
              </div>

            </div>
      </div>
    </div>
</div>