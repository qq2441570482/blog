- content_for :title, t('views.articles.edit.title')
.row
  = form_for @article do |f|
    .col-md-9
      .panel
        .panel-body
          .form-group
            = f.label t('views.articles.edit.lable_title'), nil, class: 'control-label'
            = f.text_field :title, class: 'form-control'
          .form-group
            = f.label t('views.articles.edit.content'), nil, class: 'control-label'
            = f.text_area :content, class: 'form-control', rows: 20
          .form-group
            = f.submit t('views.crud.submit'), class: 'btn btn-default'
    .col-md-3
      .panel.panel-default
        .panel-heading
          = t('views.articles.edit.tag')
        .panel-body
          - @tags.each do |tag|
            .form-group
              - if @article.tags.exists?(tag.id)
                = f.check_box :tags, { :multiple => true, :checked => true }, tag.id, false
              - else
                = f.check_box :tags, { :multiple => true, }, tag.id, false
              = f.label tag.id, tag.name, class: 'checkbox-inline'
= render 'shared/bottom'

