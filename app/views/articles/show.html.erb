<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <% if  @article.nil? %>
            <%= image_tag '404.png' %>
          <% else %>
              <div class="panel-heading">
                <%= @article.title %>
              </div>
              <div class="panel-body">
                <% if @article.content %>
                    <%= markdown(@article.content) %>
                <% end %>
              </div>
          <% end %>

        </div>
      </div>
      <%= render 'shared/search' %>
      <%= render 'shared/recent' %>
    </div>
  </div>
</div>