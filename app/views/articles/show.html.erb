<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= @article.title %>
          </div>
          <div class="panel-body">
           <% if @article.content %>
                <%= markdown(@article.content) %>
          <% end %>
          </div>
        </div>
      </div>
      <%= render 'shared/search' %>
      <%= render 'shared/recent' %>
    </div>
  </div>
</div>