%tr
  %td= article.id
  %td= link_to article.title, article_path(article)
  %td= link_to t('views.crud.edit') , edit_article_path(article), class: 'btn btn-sm btn-primary'
  %td= link_to t('views.crud.delete') , article_path(article), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: t('views.crud.confirm')}