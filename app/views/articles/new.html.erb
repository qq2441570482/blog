<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-9">
        <div class="panel">
          <div class="panel-body">
            <%= form_for @article do |f| %>
                <div class="form-group">
                  <%= f.label '标题',nil, class: 'control-label' %>
                  <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label '正文', nil, class: 'control-label' %>
                  <%= f.text_area :content, class: 'form-control', rows: 40 %>
                </div>
                <div class="form-group">
                  <%= f.label '标签', nil, class: 'control-label' %><br>
                  <% @tags.each do |tag| %>
                      <%= f.label tag.id, tag.name, class: 'checkbox-inline' %>
                      <%= f.check_box :tags, { :multiple => true }, tag.id,false %>
                  <% end %>
                </div>
                <div class="form-group">
                  <%= f.submit '提交', class: 'btn btn-default' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>