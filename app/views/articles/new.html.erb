<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel">
          <div class="panel-body">
            <%= form_for @article do |f| %>
                <div class="form-group">
                  <%= f.label '标题',nil, class: 'control-label' %>
                  <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div>
                  <%= f.label '正文', nil, class: 'control-label' %>
                  <%= f.text_area :content, class: 'form-control', rows: 20 %>
                </div>
                <div class="form-group">
                  <%= f.submit '提交', class: 'btn btn-default' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <form action="" class="search-form">
              <div class="input-group">
                <input type="text" class="form-control">
                <div class="input-group-btn">
                  <input type="button" class="btn btn-default" value="search">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>