<div class="main">
  <div class="container">
    <div class="row">
      <%= form_for @article do |f| %>
      <div class="col-md-9">
        <div class="panel">
          <div class="panel-body">
                <div class="form-group">
                  <%= f.label '标题',nil, class: 'control-label' %>
                  <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label '正文', nil, class: 'control-label' %>
                  <%= f.text_area :content, class: 'form-control', rows: 20 %>
                </div>
                <div class="form-group">
                  <%= f.submit '提交', class: 'btn btn-default' %>
                </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">标签</div>
          <div class="panel-body">
            <% @tags.each do |tag| %>
                <div class="form-group">
                  <% if @article.tags.exists?(tag.id) %>
                      <%= f.check_box :tags, { :multiple => true, :checked => true }, tag.id, false %>
                  <% else %>
                      <%= f.check_box :tags, { :multiple => true, }, tag.id, false %>
                  <% end %>
                  <%= f.label tag.id, tag.name, class: 'checkbox-inline' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>


</div>