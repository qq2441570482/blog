<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel">
          <div class="panel-body">
            <table class="table table-hover">
              <thead>
              <tr>
                <td>
                  <input type="checkbox" id="checkall" value="全选">
                </td>
                <td>标签编号</td>
                <td>内容</td>
                <td>删除</td>
              </tr>
              </thead>

              <tbody>
              <% @tags.each do |tag| %>
                  <tr>
                    <td>
                      <%= check_box_tag 'tag_ids[]', tag.id %>
                    </td>
                    <td>
                      <%= tag.id %>
                    </td>
                    <td>
                      <%= tag.name %>
                    </td>
                    <td>
                      <%= link_to '删除',tag_path(tag), method: :delete, class: 'btn btn-danger' %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= render 'shared/tag' %>
    </div>
  </div>
</div>

