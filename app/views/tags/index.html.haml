.main
  .container
    .row
      .col-md-9
        .panel.customer-panel.panel-default
          .panel-heading 标签列表
          .panel-body
            =form_tag destroy_multiple_tags_path, method: :delete
            %table.table.table-hover
              %thead
                %tr
                  %th 选择
                  %th 标签编号
                  %th 内容
                  %th 删除
              %tbody
                - @tags.each do |tag|
                  %tr
                    %td= check_box_tag 'tag_ids[]', tag.id
                    %td= tag.id
                    %td= tag.name
                    %td= link_to '删除',tag_path(tag), method: :delete, data:{confirm: "你确定要删除'#{tag.name}'标签吗？"}, class: 'btn btn-sm btn-danger'
                %input(type="checkbox" id="checkall" value="全选")
                = submit_tag '删除全部', class: 'btn btn-sm btn-link'
        - if @count > 8
          .panel-footer.cutomer-footer
            =paginate @tags

:javascript
  $('#checkall').click(function() {
    var checkbox = $(this);
    $('tbody :checkbox').each(function() {
      $(this).prop('checked', checkbox.is(':checked'));
    });
  });