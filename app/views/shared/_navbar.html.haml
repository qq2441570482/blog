.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{:type => "button", "data-toggle" => "collapse",  "data-target" => "#navbar", "aria-expanded" => "false", "aria-controls" => "navbar"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to  "#{@title}", root_path, class: 'navbar-brand customerlink'

    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{:href => "#", "data-toggle" => "dropdown", :role => "button", "aria-expanded" => "false"}
              = t('views.shared.navbar.article_manage')
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to t('views.shared.navbar.all_article'), articles_path
                = link_to t('views.crud.new'), new_article_path
                = link_to t('views.shared.navbar.new_all_article'), articles_new_use_json_path
          %li.dropdown
            %a.dropdown-toggle{:href => "#", "data-toggle" => "dropdown", :role => "button",  "aria-expanded" => "false"}
              = t('views.shared.navbar.tag_manage')
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to t('views.shared.navbar.all_tag'), tags_path
                = link_to t('views.crud.new'), new_tag_path
            %li
              = link_to t('views.shared.navbar.logout'), session_path(current_user), method: :delete, :id => 'logout'
        - else
          %li= link_to t('views.shared.navbar.archive'), archive_welcomes_path
          %li= link_to t('views.crud.tag'), tags_welcomes_path
          %li= link_to t('views.crud.calculate'), data_welcomes_path
          %li= link_to t('views.crud.about'), about_welcomes_path
