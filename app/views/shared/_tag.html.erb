<div class="col-md-3">
  <div class="panel panel-default paneltags">
    <div class="panel-heading">
      所有标签
    </div>
    <div class="panel-body">
      <div id="example" style="height: 300px"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var word_list = [
    <% @tags.each do |tag| %>
      {text: "<%= tag.name %>", weight: Math.floor((Math.random() * 10) + 1), link: {href: "/welcomes/tag/<%= tag.id %>"}  },
    <% end %>
  ];

  $(document).ready(function () {
    $('#example').jQCloud(word_list)
  })
</script>