<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9 customer-panel">
        <% if @tag.nil? || @tag.articles.count <= 0 %>
            <div class="panel panel-danger customer-panel">
              <div class="panel-heading">
                对不起，您所搜素的页面已经飞到外太空了！！
              </div>
                <div class="panel-body">
                  <%= image_tag '404.png', alt: '404页面'  %>
                </div>
            </div>
        <% else %>
            <div class="panel panel-default customer-panel">
              <div class="panel-heading">
                <%= @tag.name %>标签下共有<font color="red"><%= @tag.articles.count %></font>篇文章
              </div>
              <div class="panel-body">
                <table class="table table-hover">
                  <% @tag.articles.each do |article| %>
                  <tr>
                    <td>
                      <%= link_to article.title, article_path(article), class: 'btn btn-link' %>
                    </td>
                    <td>
                      <%= article.created_at.strftime('%Y-%m-%d') %>
                    </td>
                  </tr>
                      <% end %>
                </table>
              </div>
            </div>
        <% end %>
      </div>
      <%= render 'shared/search' %>
      <%= render 'shared/tag' %>
      <%= render 'shared/recent' %>
    </div>
    <%= render 'shared/bottom' %>
  </div>

</div>