- content_for :title, t('views.welcomes.about.title')
.row
  .col-md-3
    .col-md-12
      = image_tag 'me.jpg'
    .col-md-12
      %h3
        = t('views.crud.nick_name')
    .col-md-12
      %i.fa.fa-map-marker
      &nbsp;&nbsp;
      = t('views.welcomes.about.city')

  .col-md-9
    .col-md-12
      .panel.panel-default
        .panel-body
          %h3 个人简介
          %hr
          .col-md-12
            %soan.label.label-primary.customer-text 关于职业
          .col-md-12
            %p.customer-paragraph 程序猿
          .col-md-12
            %soan.label.label-primary.customer-text 关于理想
            %p.customer-paragraph 但行好事 莫问前程
          .col-md-12
            %soan.label.label-primary.customer-text 关于生活
            %p.customer-paragraph 理想主义 身体健康 精神富足
          .col-md-12
            %soan.label.label-primary.customer-text 关于网站
