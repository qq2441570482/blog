<div class="main">
  <div class="container">
    <div class="row">
      <div id="chartContainer" style="height: 300px; width: 100%;"></div>
    </div>
  </div>
</div>

<script type='text/javascript'>
  $(document).ready(function(){
    var chart = new CanvasJS.Chart("chartContainer",
        {
          animationEnabled: true,
          axisY: {
            labelFontSize: 20,
            labelFontColor: "dimGrey"
          },
          axisX: {
            labelAngle: -30
          },
          data: [
            {
              type: "column",
              dataPoints: [
                <% @tags.each do |tag| %>
                {label: "<%= tag.name %>", y: <%= tag.articles.count.to_i %> },
                <% end %>
              ]
            }
          ]
        });
    chart.render();
  })
</script>