<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9 customer-panel">
        <% if @tag.nil? || @tag.articles.count <= 0 %>
            <div class="panel panel-danger customer-panel">
              <div class="panel-heading">
                对不起，您所搜素的页面已经飞到外太空了！！
              </div>
                <div class="panel-body">
                  <%= image_tag '404.png', alt: '404页面'  %>
                </div>
            </div>
        <% else %>
            <% @tag.articles.each do |article| %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <%= article.title %>
                  </div>
                  <div class="panel-body">
                    <%= markdown(article.content[0...200]+'....') %>
                    <%= link_to 'more', article_path(article), class: 'btn btn-warning' %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
      <%= render 'shared/search' %>
      <%= render 'shared/tag' %>
      <%= render 'shared/recent' %>
    </div>
    <%= render 'shared/bottom' %>
  </div>

</div>