<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel">
          <div class="panel-body">
            <ul class="list-group">
              <% @articles.each do |article| %>
                  <li class="list-group-item">
                    <%= link_to article.title, article_path(article), class: 'btn btn-link' %>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_tag welcome_index_path do %>
                <div class="input-group">
                    <%= text_field_tag :condition, nil, class: 'form-control' %>
                    <div class="input-group-btn">
                        <%= submit_tag '搜索', class: 'btn btn-default' %>
                    </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>